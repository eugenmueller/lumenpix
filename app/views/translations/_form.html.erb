<%= form_tag translations_path do %>
  <p>
    <%= label_tag :locale %><br />
    <%= text_field_tag :locale %>
  </p>
  <p>
    <%= label_tag :key %><br />
    <%= text_field_tag :key %>
  </p>
  <p>
    <%= label_tag :value %><br />
    <%= text_field_tag :value %>
  </p>
  <p><%= submit_tag t('view.translations.index.submit') %></p>
<% end %>